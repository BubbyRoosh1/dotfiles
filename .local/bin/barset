#!/bin/sh

barsep="  |  "

getdate()
{
  echo $(date +"%a, %b %d - %I:%M")
}

getpackages()
{
  echo "Packages: $(apk info | wc -l)"
}

getvolume()
{
  echo "Volume: $(pactl list sinks | grep front-left | awk 'FNR == 2 {print $5}')"
}

getpower()
{
  power=$(upower -d | grep  percentage | awk 'FNR == 1 {print $2}')
  charging=$(upower -d | grep state | awk 'FNR == 2 {print $2}')
  if [ $charging = 'charging' ]; then
    charge='^'
  else
    charge=''
  fi
  echo "Battery: $power $charge"
}

hddspace()
{
  echo "Free space: $(df -m | grep /dev/sda3 | awk '{print $4}')"
}

while true; do
  xsetroot -name " $(getpackages)$barsep$(hddspace)$barsep$(getpower)$barsep$(getvolume)$barsep$(getdate)"
  sleep 10s
done &
